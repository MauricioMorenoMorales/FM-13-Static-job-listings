@import './_reset-styles.styl'
@import './_tokens.styl'

body
	font-family ffPrimary

.header
	&__background
		background-color desaturatedDarkCyan
		height 120px
		&__image
			height 100%
			width 100%
	&__filters
		display flex
		justify-content space-between
		align-items center
		padding 0 15px
		border-radius 5px
		margin 0 10px
		margin-top -35px
		background-color white
		position relative
		min-height 70px
		box-shadow shadow
		margin-bottom 40px
		&__list
			display flex
			align-items center
			flex-wrap wrap
			&__item
				display flex
				margin-top 10px
				margin 10px 0px
				margin-right 20px
				border-radius 5px
				overflow hidden
				background-color lightGrayishCyan
				&__name
					margin 4px 5px
					margin-top 7px
					font-size 1.4rem
					display flex
					justify-content center
				&__close
					background-color desaturatedDarkCyan
					padding 7px
					display flex
					align-items center
					justify-content center
					&:hover
						cursor pointer
						background-color veryDarkGrayishCyan
		&__clear__button
			font-size 1.8rem
			background none
			border none
			color veryDarkGrayishCyan
			&:hover
				text-decoration underline
				cursor pointer

.job
	border-radius 5px
	border-left 5px solid desaturatedDarkCyan
	padding 0 20px
	margin-top 60px
	margin-right 10px
	margin-left 10px
	box-shadow shadow
	&__description
		margin-bottom 20px
		&__image
			height 60px
			width 60px
			margin-top -30px
		&__content
			&__title
				font-size 1.2rem
				font-weight fwBold
				display flex
				align-items center
				&__text
					color desaturatedDarkCyan
					margin-right 20px
				&__new
					background-color desaturatedDarkCyan
					color white
					padding 3px 6px
					padding-top 7px
					text-transform uppercase
					border-radius 20px
					margin-right 10px
				&__featured
					background-color veryDarkGrayishCyan
					color white
					padding 3px 6px
					padding-top 7px
					text-transform uppercase
					border-radius 20px
			&__charge
				font-size 1.5rem
				font-weight fwBold
				color veryDarkGrayishCyan
				margin-top 0
			&__data
				font-size 1.3rem
				color darkGrayishCyan
	&__filters
		border-top 1px solid darkGrayishCyan
		display flex
		flex-wrap wrap