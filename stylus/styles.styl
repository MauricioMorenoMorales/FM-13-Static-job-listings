@import './_reset-styles.styl'
@import './_tokens.styl'

.header
	&__background
		background-color desaturatedDarkCyan
		height 120px
		&__image
			height 100%
			width 100%
	&__filters
		display flex
		justify-content space-between
		align-items center
		&__list
			display flex
			align-items center
			&__item
				display flex
				margin-right 20px
				border-radius 5px
				border 1px solid black
				&__name
					margin 0
				&__close
					background-color red