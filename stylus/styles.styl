@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary

.header
	background-image url('../images/mobile/image-header.jpg')
	background-repeat no-repeat
	background-size 100% 100%
	padding 20px
	&__navbar
		display flex
		justify-content space-between
		align-items center
		&__links
			position absolute
			display none
			flex-direction column
			align-items center
			border-radius 5px
			right 0
			left 0
			top 100px
			margin 0 auto
			width 80vw
			max-width 400px
			padding 20px
			background-color white
			&__item
				margin 10px
				color grayishBlue
				text-decoration none
				&.contact
					font-family ffSecondary
					color veryDarkDesaturatedBlue
					background-color yellow
					padding 15px 30px
					border-radius 30px
			&.active
				display flex
		&__logo
			width 150px
			height 30px
	&__hero
		text-align center
		margin 80px auto
		&__title
			font-family ffSecondary
			font-weight fwExtraBold
			font-size 3.4rem
			text-transform uppercase
			letter-spacing 8px
			color white

.description__item
	text-align center
	padding 50px 20px
	&__title
		font-family ffSecondary
		font-size 3rem
		color veryDarkDesaturatedBlue
		max-width 320px
		margin 0 auto
	&__text
		color darkGrayishBlue
	a
		font-family ffSecondary
		font-size 2rem
		color veryDarkDesaturatedBlue
		text-decoration underline yellow 4px
	&--graphic
		background-image url('../images/mobile/image-graphic-design.jpg')
		background-size 100% auto
		padding-top 90%
		background-repeat no-repeat
		text-align center
		color darkDesaturatedCyan
		padding-left 20px
		padding-right 20px
		padding-bottom 100px
		&__title
			font-family ffSecondary
			font-size 3rem
	&--photography
		background-image url('../images/mobile/image-photography.jpg')
		background-size 100% auto
		padding-top 90%
		background-repeat no-repeat
		text-align center
		color darkBlue
		margin-top -60px
		padding-left 20px
		padding-right 20px
		&__title
			font-family ffSecondary
			font-size 3rem
		&__text
			padding-bottom 100px

.testimonials
	text-align center
	&__title
		font-family ffSecondary
		color grayishBlue
		text-transform uppercase
		letter-spacing 3px
	&__item
		margin 0 auto
		margin-top 50px
		max-width 350px
		color veryDarkGrayishBlue
		&__avatar
			width 80px
			height 80px
			border-radius 50%
			overflow hidden
		&__name
			font-family ffSecondary
			font-weight fwBold
			color veryDarkDesaturatedBlue
			margin-bottom 5px
		&__ocupation
			font-size 1.4rem
			margin-top 0

.footer
	margin-top 100px
	&__images
		display grid
		grid-template-columns 50% 50%
		&__item > img
			height 100%
			width 100%
	&__links
		text-align center
		background-color footerBackground
		padding-bottom 30px
		&__logo
			margin-top 50px
		&__sections
			padding-top 20px
			display flex
			margin 0 auto
			max-width 250px
			justify-content space-between
			&__item
				color darkModerateCyan
				text-decoration none
		&__social
			display flex
			justify-content space-between
			margin 30px auto
			max-width 150px
			&__item
				cursor pointer
			& > svg
				cursor pointer

@media screen and (max-width 346px)
	.description__item--photography
		margin-top -105px

@media screen and (min-width 500px)
	.header
		background-image url('../images/desktop/image-header.jpg')
		background-size auto 100%
		background-position-x center

@media screen and (min-width 715px)
	.header
		background-size auto 120%
		background-position-y -90px
		background-color blue
		height 600px
		&__navbar
			&__links
				display block
				position static
				margin 0
				flex-direction row
				max-width 455px
				background-color blue
				&__item
					color white
					&.contact
						background-color white
						&:hover
							background-color #ffffffbb
			&__hamburger
				display none
		&__hero
			margin-left 10px
			&__title
				margin-top -30px
				margin-bottom 30px
	.description
		display grid
		grid-template-columns 50% 50%
		grid-template-areas "text1 image1"\
												"image2 text2"\
												"backgroundtext1 backgroundtext2";
		&__item
			padding 0 30px
			display flex
			flex-direction column
			align-items center
			justify-content center
			max-width 500px
			margin 0 auto
			&--image
				& > img
					width 100%
					height 100%
					object-fit cover
				&.image1
					grid-area image1
			&--photography
				margin-top 0
				&__text
					max-width 400px
					margin 0 auto
			&--graphic__text
				max-width 400px
				margin 0 auto

@media screen and (min-width 1000px)
	.testimonials
		max-width 1440px
		margin 0 auto
		&--item-container
			display flex
			justify-content space-between
		&__item
			padding 0 10px
	.footer__images
		grid-template-columns 25% 25% 25% 25%